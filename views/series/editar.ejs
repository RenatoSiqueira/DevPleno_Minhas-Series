<% include ../partials/header.ejs %>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Editar Série</h2>
                <form method="POST">
                    <div class="form-group">
                        <label for="name">Nome da Série</label>
                        <input value="<%= serie.name %>" type="text" id="name" name="name" class="form-control"
                            placeholder="Informe o Nome">
                        <% if(errors && errors.indexOf('name') >= 0) { %>
                        <small class="form-text text-muted">Preencha o Nome da Série</small>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="status">Situação:</label>
                        <select name="status" id="status" class="form-control">
                            <% labels.forEach(label => { %>
                            <option value="<%= label.id %>" <% if(label.id === serie.status) { %> selected="selected"
                                <% } %>><%= label.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <button class="btn btn-primary" type="submit">Salvar</button>
                        <a href="/series" class="btn btn-info"> Voltar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

<% include ../partials/footer.ejs %>